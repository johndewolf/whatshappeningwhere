<div class="container">
  <div class="row">
    <div class="span1">
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
    </div>
  </div>
  <br>
  <% @instagrams = Instagram.media_search(@location_search.latitude,
                    @location_search.longitude) %>
    <% @instagrams.each do |instagram| %>
    <div class="row-fluid">
      <div class="span3">
        <ul class="instagrams">
          <li><%= image_tag instagram.images.low_resolution.url %></li>
          <li><a href=<%= "http://www.instagram.com/" +
            instagram.user.username %>><%=instagram.user.username %></a></li>
          <li><%= Time.at(instagram.created_time.to_i).strftime("%b %d, %l:%M") %></li>
        </ul>
      </div>
    <% end %>
</div>
<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": <%= @location_search.latitude %>,
      "lng": <%= @location_search.longitude %>,
      "picture": {
        "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
        "width":  800,
        "height": 400
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(18);
});
</script>
